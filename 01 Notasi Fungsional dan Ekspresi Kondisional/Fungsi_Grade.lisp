; DEFENISI dan SPESIFIKASI
; Nama Fungsi Grade (x)
; cek ::integer --> string
; cek (x) melakukan pengecekan bilangan bulat x, menampilkan teks cara baca bilangan tersebut.
;----------------------------------------------------------------------------------------------------------------------------------
; REALISASI :
; cek (x) :
; 			x<35		: "E" 
;  			35>= x <50  : "D"
;  			50>= x <57  : "C"
;  			57>= x <65  : "BC"
;			65>= x <72  : "B"
;			72>= x <80  : "AB"
;			x>= 80      : "A"
;----------------------------------------------------------------------------------------------------------------------------------
; REALISASI LISP:
(defun Grade (x)
	(cond ((< x 35) "E")
		((and (>= x 35) (< x 50)) "D")
		((and (>= x 50) (< x 57)) "C")
		((and (>= x 57) (< x 65)) "BC")
		((and (>= x 65) (< x 72)) "B")
		((and (>= x 72) (< x 80)) "AB")
		((>= x 80) "A")
	)
)
;----------------------------------------------------------------------------------------------------------------------------------
; APLIKASI
; Grade (x)