; DEFENISI DAN SPESIFIKASI
; max4 : 4 integer -> integer
; (max4(v,x,y,z))menentukan maksimum dari 4 bilangan integer yang berlainan nilainya, v≠x≠y≠z)
;-----------------------------------------------------------------------------------------------------------------------------------
; REALISASI
; max2 (a,b) :
;	 if a>b then a
;	 	 else b
;-----------------------------------------------------------------------------------------------------------------------------------
; REALISASI LISP
(defun MAX2 (x y)
	(cond	((>= x y) x)
		 	(t y)
	)
)

(defun MAX4 (v x y z)
	(MAX2 (MAX2 v x) (MAX2 y z))
)
